class Solution {
    public int maxProduct(int[] nums) {
        int prfx = 1, sfx = 1; // prfx for multi from starting , suffix for multi from end
        int n  = nums.length;
        int ans = Integer.MIN_VALUE;
        for(int i =0 ; i<n;i++){
            if(prfx==0) prfx =1;
            if(sfx==0) sfx =1;
            prfx *= nums[i];
            sfx *= nums[n-i-1];
            ans = Math.max(ans, Math.max(prfx, sfx));
        }
        return ans;
    }
}
