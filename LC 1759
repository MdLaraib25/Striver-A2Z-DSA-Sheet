class Solution {
    public int countHomogenous(String s) {
        int n = s.length();
        int M = 1000000007;
        long total = 0, cnt = 1;

        for (int i = 1; i < n; i++) {
            if (s.charAt(i) == s.charAt(i - 1)) cnt++;
            else {
                total = (total + (cnt * (cnt + 1)) / 2) % M;
                cnt = 1;
            }
        }

        total = (total + (cnt * (cnt + 1)) / 2) % M;
        return (int) total;
    }
}
