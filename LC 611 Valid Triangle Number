class Solution {
    public int triangleNumber(int[] nums) {
        if(nums.length < 3) return 0;
        int cnt = 0, n = nums.length;
        Arrays.sort(nums);
        for(int i = n - 1; i >= 2; i--){
            int l = 0, r = i - 1;
            while (l < r){
                if(nums[l] + nums[r] > nums[i]){
                    cnt += r - l;
                    r--;
                } else l++;
            }
        } return cnt;
    }
}
