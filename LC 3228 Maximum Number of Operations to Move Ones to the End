class Solution {
    public int maxOperations(String s) {
        int res = 0, count1 = 0, n = s.length(), i = 0;
        while (i < n){
            if(s.charAt(i) == '0'){
                res += count1;
                while(i < n && s.charAt(i) == '0') i++;
            } else {
                count1++;
                i++;
            }
        } return res;
    }
}
