/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    private int findMaxPath(TreeNode root, int[] value){
        if(root == null) return 0;
        int left = Math.max(0, findMaxPath(root.left, value));
        int right = Math.max(0, findMaxPath(root.right, value));

        value[0] = Math.max(value[0], left + right + root.val);
        return root.val + Math.max(left, right);
    }

    public int maxPathSum(TreeNode root) {
        int[] value = new int[1];
        value[0] = Integer.MIN_VALUE;
        findMaxPath(root, value);
        return value[0];
    }
}
