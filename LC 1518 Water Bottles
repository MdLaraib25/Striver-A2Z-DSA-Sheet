class Solution {
    public int numWaterBottles(int numBottles, int numExchange) {
        int temp = numBottles;
        int res = 0;
        while(temp >= numExchange){
            int val = temp / numExchange;
            int rem =  temp % numExchange;
            res += val;
            temp = val + rem;
        }return numBottles + res;
    }
}
