/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode bstFromPreorder(int[] preorder) {
        return frompreorder(preorder, Integer.MAX_VALUE, new int[]{0});
    }
    public TreeNode frompreorder(int[] nums, int bound, int[] i){
        if(i[0] == nums.length || nums[i[0]] > bound) return null;
        TreeNode root = new TreeNode((nums[i[0]++]));
        root.left = frompreorder(nums,root.val, i);
        root.right = frompreorder(nums,bound, i);
        return root;
    }
}
